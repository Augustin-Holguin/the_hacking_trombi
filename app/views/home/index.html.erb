<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <h1>The Hacking Trombinoscope</h1>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
        <li><%= link_to "Home",   '#' %></li>
        <li><%= link_to "Settings", edit_user_registration_path %></li>
        <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
        <% else %>
        <li><%= link_to "Log in", new_user_session_path %></li>
        <li><%= link_to "Sign up", new_user_registration_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>

<% if user_signed_in? %>
  <p id="welcome">
    Welcome to the Hacking's Project Trombinoscope
  </p>

<!-- Trombi -->

<h3>Our users - Trombinoscope</h3>
<div class="trombi">
  <table style= "width:100%">
    <thead>
      <tr>
        <th>Slack handle</th>
        <th>Email</th>
        <th>Bio</th>
      </tr>
    </thead>

      <% @users.each do |user| %>
      <tbody>
        <td><%= user.slack %></td>
        <td><%= user.email %></td>
        <td><%= user.bio %></td>
      </tbody>
      <% end %>
  </table>
</div>

<% else %>
  <p id="welcome">
    Sign in if you already have an account otherwise please sign up !
  </p>
<% end %>

<%= @user %>

<footer>
  Made by Augustin Holguin - 2017
</footer>
